@page
@model EXE2.Pages.CartModel
@{

}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --coffee-dark: #121D23;
            --coffee-light: #DDC1A6;
            --text-light: #FFFFFF;
        }

        body {
            background-color: var(--coffee-dark);
            color: var(--text-light);
        }

        .card {
            background-color: var(--coffee-dark) !important;
            border: 1px solid var(--coffee-light);
        }

        .cart-items-container {
            max-height: none;
            overflow-y: visible;
            margin-bottom: 30px;
            border-bottom: 1px solid var(--coffee-light);
            padding-bottom: 30px;
        }

        .payment-method {
            border: 1px solid var(--coffee-light);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 10px;
            cursor: pointer;
            transition: all 0.3s ease;
            background-color: var(--coffee-dark);
            color: var(--text-light);
        }

            .payment-method:hover {
                background-color: rgba(221, 193, 166, 0.1);
            }

            .payment-method.selected {
                background-color: rgba(221, 193, 166, 0.1);
            }

        .address-form {
            background-color: rgba(221, 193, 166, 0.05);
            border: 1px solid var(--coffee-light);
            border-radius: 8px;
            padding: 20px;
            margin-top: 30px;
            color: var(--text-light);
        }

        .btn-checkout {
            background-color: var(--coffee-light);
            color: var(--coffee-dark);
            padding: 12px 30px;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: none;
            font-weight: 600;
        }

            .btn-checkout:hover {
                background-color: #c9a98c;
                color: var(--coffee-dark);
            }

        .form-control {
            background-color: rgba(221, 193, 166, 0.05);
            border: 1px solid var(--coffee-light);
            color: var(--text-light);
        }

            .form-control:focus {
                background-color: rgba(221, 193, 166, 0.1);
                border-color: var(--coffee-light);
                color: var(--text-light);
                box-shadow: 0 0 0 0.25rem rgba(221, 193, 166, 0.25);
            }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
        }

        h1, h2, h3, h4, h5, h6 {
            color: var(--text-light);
        }

        .text-muted {
            color: var(--text-light) !important;
            opacity: 0.8;
        }

        hr {
            border-color: var(--coffee-light);
            opacity: 0.3;
        }

        .btn-outline-primary {
            color: var(--coffee-light);
            border-color: var(--coffee-light);
            background-color: transparent;
        }

            .btn-outline-primary:hover {
                background-color: var(--coffee-light);
                color: var(--coffee-dark);
                border-color: var(--coffee-light);
            }

        .bg-light {
            background-color: var(--coffee-dark) !important;
        }

        .img-fluid {
            border: 1px solid var(--coffee-light);
            border-radius: 4px;
        }

        .btn-link {
            color: var(--coffee-light);
        }

            .btn-link:hover {
                color: #c9a98c;
            }

        a {
            color: var(--coffee-light);
        }

            a:hover {
                color: #c9a98c;
            }

        .address-form .row {
            margin-bottom: 0;
        }

        .address-form .col-md-6 {
            margin-bottom: 15px;
        }

        .cart-item {
            margin-bottom: 20px;
            padding-bottom: 20px;
            border-bottom: 1px solid rgba(221, 193, 166, 0.2);
        }

            .cart-item:last-child {
                border-bottom: none;
                margin-bottom: 0;
                padding-bottom: 0;
            }

        .section-title {
            color: var(--text-light);
            margin-bottom: 20px;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <section class="h-100 h-custom" style="background-color: #121d23;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12">
                    <div class="card shadow-lg" style="border-radius: 15px;">
                        <div class="card-body p-0">
                            <div class="row g-0">
                                <div class="col-lg-8">
                                    <div class="p-5">
                                        <div class="d-flex justify-content-between align-items-center mb-4">
                                            <h1 class="fw-bold mb-0" style="color: #DDC1A6;">Shopping Cart</h1>
                                            <h6 class="mb-0 text-muted">3 items</h6>
                                        </div>

                                        <!-- Cart Items Section -->
                                        <div class="mb-4">
                                            <h2 class="section-title">Your Items</h2>
                                            <div class="cart-items-container">
                                                <div class="cart-item">
                                                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img5.webp"
                                                                 class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                                            <h6 class="text-muted">Shirt</h6>
                                                            <h6 class="mb-0">Cotton T-shirt</h6>
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                                <i class="fas fa-minus"></i>
                                                            </button>

                                                            <input id="form1" min="1" name="quantity" value="1" type="number"
                                                                   class="form-control form-control-sm" />

                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                            <h6 class="mb-0">€ 44.00</h6>
                                                        </div>
                                                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                            <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="cart-item">
                                                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img6.webp"
                                                                 class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                                            <h6 class="text-muted">Shirt</h6>
                                                            <h6 class="mb-0">Cotton T-shirt</h6>
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                                <i class="fas fa-minus"></i>
                                                            </button>

                                                            <input id="form1" min="1" name="quantity" value="1" type="number"
                                                                   class="form-control form-control-sm" />

                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                            <h6 class="mb-0">€ 44.00</h6>
                                                        </div>
                                                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                            <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="cart-item">
                                                    <div class="row mb-4 d-flex justify-content-between align-items-center">
                                                        <div class="col-md-2 col-lg-2 col-xl-2">
                                                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-shopping-carts/img7.webp"
                                                                 class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-3">
                                                            <h6 class="text-muted">Shirt</h6>
                                                            <h6 class="mb-0">Cotton T-shirt</h6>
                                                        </div>
                                                        <div class="col-md-3 col-lg-3 col-xl-2 d-flex">
                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepDown()">
                                                                <i class="fas fa-minus"></i>
                                                            </button>

                                                            <input id="form1" min="1" name="quantity" value="1" type="number"
                                                                   class="form-control form-control-sm" />

                                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-link px-2"
                                                                    onclick="this.parentNode.querySelector('input[type=number]').stepUp()">
                                                                <i class="fas fa-plus"></i>
                                                            </button>
                                                        </div>
                                                        <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                            <h6 class="mb-0">€ 44.00</h6>
                                                        </div>
                                                        <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                            <a href="#!" class="text-muted"><i class="fas fa-times"></i></a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Address Form Section -->
                                        <div class="address-form">
                                            <h2 class="section-title">Shipping Information</h2>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <label class="form-label">Full Name</label>
                                                    <input type="text" class="form-control" required>
                                                </div>
                                                <div class="col-md-6">
                                                    <label class="form-label">Phone Number</label>
                                                    <input type="tel" class="form-control" required>
                                                </div>
                                                <div class="col-12">
                                                    <label class="form-label">Address</label>
                                                    <input type="text" class="form-control" required>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="pt-4">
                                            <a asp-page="/Menu" class="btn btn-outline-primary">
                                                <i class="fas fa-long-arrow-alt-left me-2"></i>Continue Shopping
                                            </a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 bg-light">
                                    <div class="p-5">
                                        <h3 class="fw-bold mb-4">Order Summary</h3>
                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">Items (3)</h5>
                                            <h5>€ 132.00</h5>
                                        </div>

                                        <h5 class="text-uppercase mb-3">Shipping</h5>
                                        <div class="mb-4">
                                            <p class="text-success"><i class="fas fa-truck me-2"></i>Free Shipping</p>
                                        </div>

                                        <!-- Payment Methods -->
                                        <h5 class="text-uppercase mb-3">Payment Method</h5>
                                        <div class="mb-4">
                                            <div class="payment-method" onclick="selectPayment(this, 'momo')">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="payment" id="momo">
                                                    <label class="form-check-label" for="momo">
                                                        <i class="fas fa-wallet me-2"></i>MoMo Payment
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="payment-method" onclick="selectPayment(this, 'cod')">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="radio" name="payment" id="cod">
                                                    <label class="form-check-label" for="cod">
                                                        <i class="fas fa-money-bill-wave me-2"></i>Cash on Delivery
                                                    </label>
                                                </div>
                                            </div>
                                        </div>

                                        <hr class="my-4">

                                        <div class="d-flex justify-content-between mb-4">
                                            <h5 class="text-uppercase">Total price</h5>
                                            <h5>€ 132.00</h5>
                                        </div>

                                        <button type="button" class="btn btn-checkout w-100 btn-lg">
                                            Proceed to Checkout
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function selectPayment(element, method) {
            // Remove selected class from all payment methods
            document.querySelectorAll('.payment-method').forEach(el => {
                el.classList.remove('selected');
            });
            // Add selected class to clicked payment method
            element.classList.add('selected');
            // Set the radio button as checked
            document.getElementById(method).checked = true;
        }
    </script>
</body>
</html>