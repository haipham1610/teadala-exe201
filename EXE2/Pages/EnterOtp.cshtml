@page
@model EnterOtpModel
@{
    Layout = "_Layout";
}

<style>
    .otp-container {
        background-color: #121d23;
        min-height: 100vh;
        padding: 30px 0;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 100px;
    }

    .otp-card {
        background-color: #2c2424;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        padding: 30px;
        width: 100%;
        max-width: 500px;
        margin-top: 0;
    }

    .otp-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .otp-header h2 {
        color: rgb(200, 165, 94);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .otp-header p {
        color: #fff;
        opacity: 0.8;
        font-size: 16px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        color: #fff;
        font-size: 16px;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        background-color: #3a2f2f;
        border: 1px solid #4a3f3f;
        border-radius: 8px;
        color: #fff;
        padding: 12px 15px;
        width: 100%;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background-color: #3a2f2f;
        border-color: rgb(200, 165, 94);
        color: #fff;
        box-shadow: none;
        outline: none;
    }

    .btn-submit {
        background-color: rgb(200, 165, 94);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 500;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover {
        background-color: rgb(180, 145, 74);
        transform: translateY(-2px);
    }

    .back-to-forgot {
        text-align: center;
        margin-top: 20px;
    }

    .back-to-forgot a {
        color: rgb(200, 165, 94);
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .back-to-forgot a:hover {
        color: rgb(180, 145, 74);
        text-decoration: underline;
    }

    .alert {
        background-color: rgba(255, 68, 68, 0.1);
        border: 1px solid #ff4444;
        color: #ff4444;
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: none;
    }

    .alert.show {
        display: block;
    }

    .password-requirements {
        background-color: rgba(200, 165, 94, 0.1);
        border: 1px solid rgb(200, 165, 94);
        border-radius: 8px;
        padding: 15px;
        margin-top: 20px;
        margin-bottom: 25px;
    }

    .password-requirements h6 {
        color: rgb(200, 165, 94);
        font-size: 14px;
        margin-bottom: 10px;
    }

    .password-requirements ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .password-requirements li {
        color: #fff;
        font-size: 13px;
        margin-bottom: 5px;
        display: flex;
        align-items: center;
    }

    .password-requirements li i {
        color: rgb(200, 165, 94);
        margin-right: 8px;
        font-size: 12px;
    }
</style>

<div class="otp-container">
    <div class="otp-card">
        <div class="otp-header">
            <h2>Nhập mã OTP</h2>
            <p>Vui lòng nhập mã OTP đã được gửi đến email của bạn và mật khẩu mới</p>
        </div>

        <div class="alert" id="errorAlert"></div>

        <form method="post">
            <div class="form-group">
                <label for="OTP">Mã OTP</label>
                <input asp-for="OTP" 
                       class="form-control" 
                       placeholder="Nhập mã OTP 6 chữ số"
                       required />
            </div>

            <div class="form-group">
                <label for="NewPassword">Mật khẩu mới</label>
                <input asp-for="NewPassword" 
                       class="form-control" 
                       type="password" 
                       placeholder="Nhập mật khẩu mới"
                       required />
            </div>

            <div class="password-requirements">
                <h6><i class="fas fa-info-circle me-2"></i>Yêu cầu mật khẩu:</h6>
                <ul>
                    <li><i class="fas fa-check-circle"></i>Ít nhất 8 ký tự</li>
                    <li><i class="fas fa-check-circle"></i>Bao gồm chữ hoa và chữ thường</li>
                    <li><i class="fas fa-check-circle"></i>Bao gồm ít nhất một số</li>
                    <li><i class="fas fa-check-circle"></i>Bao gồm ít nhất một ký tự đặc biệt</li>
                </ul>
            </div>

            <button type="submit" class="btn-submit">
                <i class="fas fa-check-circle me-2"></i>Xác nhận
            </button>
        </form>

        <div class="back-to-forgot">
            <a asp-page="/ForgotPassword">
                <i class="fas fa-arrow-left me-1"></i>Quay lại trang quên mật khẩu
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.onload = function () {
            var message = '@TempData["ErrorMessage"]';
            if (message) {
                var alert = document.getElementById('errorAlert');
                alert.textContent = message;
                alert.classList.add('show');
                
                // Auto hide alert after 5 seconds
                setTimeout(function() {
                    alert.classList.remove('show');
                }, 5000);
            }
        };
    </script>
}
