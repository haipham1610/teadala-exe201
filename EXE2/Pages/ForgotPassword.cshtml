@page
@model EXE2.Pages.ForgotPasswordModel
@{
    Layout = "_Layout";
}

<style>
    .forgot-password-container {
        background-color: #121d23;
        min-height: 100vh;
        padding: 30px 0;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 100px;
    }

    .forgot-password-card {
        background-color: #2c2424;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        padding: 30px;
        width: 100%;
        max-width: 500px;
        margin-top: 0;
    }

    .forgot-password-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .forgot-password-header h2 {
        color: rgb(200, 165, 94);
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .forgot-password-header p {
        color: #fff;
        opacity: 0.8;
        font-size: 16px;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-group label {
        color: #fff;
        font-size: 16px;
        margin-bottom: 8px;
        display: block;
    }

    .form-control {
        background-color: #3a2f2f;
        border: 1px solid #4a3f3f;
        border-radius: 8px;
        color: #fff;
        padding: 12px 15px;
        width: 100%;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background-color: #3a2f2f;
        border-color: rgb(200, 165, 94);
        color: #fff;
        box-shadow: none;
        outline: none;
    }

    .btn-submit {
        background-color: rgb(200, 165, 94);
        color: #fff;
        border: none;
        border-radius: 8px;
        padding: 12px 30px;
        font-size: 16px;
        font-weight: 500;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-submit:hover {
        background-color: rgb(180, 145, 74);
        transform: translateY(-2px);
    }

    .back-to-login {
        text-align: center;
        margin-top: 20px;
    }

    .back-to-login a {
        color: rgb(200, 165, 94);
        text-decoration: none;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .back-to-login a:hover {
        color: rgb(180, 145, 74);
        text-decoration: underline;
    }

    .alert {
        background-color: rgba(255, 68, 68, 0.1);
        border: 1px solid #ff4444;
        color: #ff4444;
        padding: 12px 15px;
        border-radius: 8px;
        margin-bottom: 20px;
        display: none;
    }

    .alert.show {
        display: block;
    }
</style>

<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <h2>Forgot Password</h2>
            <p>Enter your email address and we'll send you a code to reset your password.</p>
        </div>

        <div class="alert" id="errorAlert"></div>

        <form method="post">
            <div class="form-group">
                <label for="Email">Email Address</label>
                <input asp-for="Email" 
                       class="form-control" 
                       type="email" 
                       placeholder="Enter your email address"
                       required />
            </div>
            <button type="submit" class="btn-submit">
                <i class="fas fa-paper-plane me-2"></i>Send Reset Code
            </button>
        </form>

        <div class="back-to-login">
            <a asp-page="/Login">
                <i class="fas fa-arrow-left me-1"></i>Back to Login
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        window.onload = function () {
            var message = '@TempData["ErrorMessage"]';
            if (message) {
                var alert = document.getElementById('errorAlert');
                alert.textContent = message;
                alert.classList.add('show');
                
                // Auto hide alert after 5 seconds
                setTimeout(function() {
                    alert.classList.remove('show');
                }, 5000);
            }
        };
    </script>
}



